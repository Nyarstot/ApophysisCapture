// User variables

RenderWidth := 1024;
RenderHeight := 1024;
RenderQuality := 1;
RenderOversample := 1;
Spread := 2.0;

FilterRadius := 0.8;
FrameLimit := 25;

FileLocation := 'C:\ApophysisRenders\';
RenderFiletype := 'jpg';

// Dialog Boxes

SetFlameFile(GetFilename);
if not InputQuery('Animation Saver', 'Render Target path: ', FileLocation) then exit;

// Set params

Renderer.Width := RenderWidth;
Renderer.Height := RenderHeight;
Flame.SampleDensity := RenderQuality;
Flame.FilterRadius := FilterRadius;
Flame.Oversample := RenderOversample;
SetRenderBounds;

//Preview;

{Process}
for i := 0 to FrameLimit do
begin
    LoadFlame(i);
    RotateReference(3.6);
    Renderer.Filename := FileLocation + Flame.name + '_' + FloatToStr(i) + '.' + RenderFiletype;
    Render;
end;
UpdateFlame := False;